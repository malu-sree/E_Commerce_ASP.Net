@model E_CommerceWebsite.Models.User

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<link rel="stylesheet" href="~/css/editProfile.css" />

<div class="form-container">
<h2>Edit Profile</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-controller="UserDashboard" asp-action="EditProfile" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Name">Full Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="PhoneNumber">Phone</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

   
        <button type="submit" class="btn mt-4" style="background-color: #ff7f00; color: white; border: none; padding: 10px 20px; font-size: 16px; border-radius: 5px; cursor: pointer; transition: background-color 0.3s ease;">
            Save Changes
        </button>
</form>

