@model E_CommerceWebsite.Models.User

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<link rel="stylesheet" href="~/css/editProfile.css" />

<div class="form-container">
<h2>Edit Profile</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-controller="UserDashboard" asp-action="EditProfile" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Name">Full Name</label>
            <input asp-for="Name" class="form-control" id="Name" />
            <span id="nameError" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="Email">Email</label>
            <input asp-for="Email" class="form-control" id="Email" />
            <span id="emailError" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="PhoneNumber">Phone</label>
            <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" />
            <span id="phoneError" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label for="Address">Address</label>
            <input asp-for="Address" class="form-control" id="Address" />
            <span id="addressError" class="text-danger"></span>
    </div>

   
        <button type="submit" class="btn mt-4" style="background-color: #ff7f00; color: white; border: none; padding: 10px 20px; font-size: 16px; border-radius: 5px; cursor: pointer; transition: background-color 0.3s ease;">
            Save Changes
        </button>
</form>


    <a asp-action="Index" class="btn mt-3" style="background-color: gray; color: white; padding: 8px 16px; border: none; border-radius: 4px; display: inline-block; text-align: center; text-decoration: none; cursor: pointer;">Cancel</a>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/editProfileValidation.js"></script>
